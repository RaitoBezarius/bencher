import { Code } from "astro-expressive-code/components";
import InstallCliFallback from "./InstallCliFallback.tsx";
import InstallCli from "./InstallCli.tsx";

const { centered } = Astro.props;
---

<InstallCli client:only="solid-js" centered={centered}>
	<InstallCliFallback slot="fallback" centered={centered}>
		<Code frame="terminal" code="â €" />
	</InstallCliFallback>
	<Code
		slot="linux"
		lang="bash"
		code="curl --proto '=https' --tlsv1.2 -sSfL https://bencher.dev/download/install-cli.sh | sh"
	/>
	<Code
		slot="macos"
		lang="bash"
		code="curl --proto '=https' --tlsv1.2 -sSfL https://bencher.dev/download/install-cli.sh | sh"
	/>
